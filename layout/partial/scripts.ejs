<!-- Scripts -->
<% if (theme.cdn && theme.cdn.enable) { %>
<script src="<%= theme.cdn.url %>js/pjax.min.js"></script>
<% } else { %>
<script src="<%- url_for('js/pjax.min.js') %>"></script>
<% } %>

<!-- JS -->
<% if (theme.cdn && theme.cdn.enable) { %>
<script src="<%= theme.cdn.url %>js/main.js"></script>
<% } else { %>
<script src="<%- url_for('js/main.js') %>"></script>
<% } %>

<!-- Artalk (Comment System) -->
<% if (theme.artalk && theme.artalk.enable) { %>
    <% 
        var artalkCss = theme.artalk.css_url;
        var artalkJs = theme.artalk.js_url;
        
        if (!artalkCss) {
            artalkCss = (theme.cdn && theme.cdn.enable) ? theme.cdn.url + 'css/Artalk.css' : url_for('css/Artalk.css');
        }
        
        if (!artalkJs) {
            artalkJs = (theme.cdn && theme.cdn.enable) ? theme.cdn.url + 'js/Artalk.js' : url_for('js/Artalk.js');
        }
    %>
    <link href="<%- artalkCss %>" rel="stylesheet" />
    <script src="<%- artalkJs %>"></script>
<% } %>

<% if (is_post() && theme.artalk && theme.artalk.enable) { %>
    <script>
        window.artalkConfig = {
            server: '<%- theme.artalk.server %>',
            site: '<%- theme.artalk.site %>',
            pageKey: '<%= page.path %>',
            pageTitle: '<%= page.title %>',
            darkMode: false
        };
    </script>
<% } %>
